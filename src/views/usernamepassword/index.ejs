
    <% if (locals.isFailedLogin) { %>
    <div class="row">
        <div class="col-12">
            <div class="notification notification-error">
                <%= locals.message || 'error!' %>
            </div>
        </div>
    </div>
    <% } %>
    <div class="grid-row">
        <div class="column-two-thirds">
            <h1 class="heading-xlarge">
                Sign in
            </h1>
            <p class="lede">Sign in using the form below to access DfE services.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h2 class="heading-medium">Existing user</h2>
            <form method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                <fieldset class="highlight">
                    <legend class="vh">Sign in form</legend>
                    <div class="form-group">
                        <label class="form-label-bold" for="username">Email address</label>
                        <input class="form-control" id="username" name="username" type="text">
                    </div>
                    <div class="form-group">
                        <label class="form-label-bold" for="password">Password</label>
                        <input class="form-control" id="password" name="password" type="password">
                    </div>
                    <div class="panel">
                        <p>By continuing you accept the <a href="#">terms and conditions</a>.</p>
                    </div>

                    <div class="form-submit">
                        <button type="submit" class="button">Sign in</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-6">
            <h2 class="heading-medium">New user</h2>
            <p>If you are a new user...</p>
        </div>
    </div>

