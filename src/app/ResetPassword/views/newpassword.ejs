<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <form method="post" id="form-reset-your-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Reset password form</legend>
                <div class="form-group show-password <%= locals.validationMessages.newPassword !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label-bold" for="newPassword">Create new password</label>
                    <% if (locals.validationMessages.newPassword !== undefined) { %>
                    <p class="error-message" id="validation-new-password"><%= locals.validationMessages.newPassword %></p>
                    <% } %>
                    <input class="form-control" id="newPassword" name="newPassword" type="password" value="<%=newPassword%>" required aria-required="true" <% if (locals.validationMessages.newPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-new-password" <% } %>>
                </div>
                <div class="form-group <%= locals.validationMessages.confirmPassword !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label-bold" for="confirmPassword">Confirm your new password</label>
                    <% if (locals.validationMessages.confirmPassword !== undefined) { %>
                    <p class="error-message" id="validation-confirm-password"><%= locals.validationMessages.confirmPassword %></p>
                    <% } %>
                    <input class="form-control" id="confirmPassword" name="confirmPassword" type="password" value="<%=confirmPassword%>" required aria-required="true" <% if (locals.validationMessages.confirmPassword !== undefined) { %> aria-invalid="true" aria-describedby="validation-confirm-password" <% } %>>
                </div>
                <div class="form-submit">
                    <button type="submit" class="button">Reset password</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>

