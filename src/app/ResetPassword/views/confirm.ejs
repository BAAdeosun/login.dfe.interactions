<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <p class="lede">Enter the code that was emailed to you</p>
    </div>
</div>
<div class="grid-row">
    <div class="col-12">
        <form method="post" id="form-confirm-reset-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Reset password form</legend>
                <input type="hidden" value="<%=locals.uid%>" name="uid" id="uid"/>
                <div class="form-group <%= locals.validationMessages.code !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label" for="code">Code</label>
                    <% if (locals.validationMessages.code !== undefined) { %>
                    <p class="error-message" id="validation-code"><%= locals.validationMessages.code %></p>
                    <% } %>
                    <input class="form-control char-width-8" id="code" name="code" type="text" value="<%=code%>" maxlength="8" required aria-required="true" <% if (locals.validationMessages.code !== undefined) { %> aria-invalid="true" aria-describedby="validation-code" <% } %>>
                </div>
                <div class="form-submit">
                    <button type="submit" class="button">Continue</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-8">
        <%- include('../../includes/helpdesk'); %>
    </div>
</div>