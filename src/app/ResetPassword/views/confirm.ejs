<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <p class="lede">Enter your email address and code that was emailed to you</p>
    </div>
</div>
<div>
    <form method="post">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <fieldset class="highlight">
            <legend class="vh">Reset password form</legend>
            <div class="form-group">
                <label class="form-label-bold" for="email">Email address</label>
                <input class="form-control" id="email" name="email" type="email" value="<%=email%>">
            </div>
            <div class="form-group">
                <label class="form-label-bold" for="email">Code</label>
                <input class="form-control" id="code" name="code" type="text" value="<%=code%>">
            </div>

            <div class="form-submit">
                <button type="submit" class="button">Continue</button>
            </div>
        </fieldset>
    </form>
</div>