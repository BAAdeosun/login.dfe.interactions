<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <p class="lede">Enter your email address and code that was emailed to you</p>
        <form method="post" id="form-confirm-reset-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Reset password form</legend>
                <div class="form-group <%= locals.validationMessages.email !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label-bold" for="email">Email address</label>
                    <% if (locals.validationMessages.email !== undefined) { %>
                    <p class="error-message" id="validation-email"><%= locals.validationMessages.email %></p>
                    <% } %>
                    <input class="form-control" id="email" name="email" type="email" value="<%=email%>" required>
                </div>
                <div class="form-group <%= locals.validationMessages.code !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label-bold" for="code">Code</label>
                    <% if (locals.validationMessages.code !== undefined) { %>
                    <p class="error-message" id="validation-code"><%= locals.validationMessages.code %></p>
                    <% } %>
                    <input class="form-control char-width-8" id="code" name="code" type="text" value="<%=code%>" maxlength="8" required>
                </div>
                <div class="form-submit">
                    <button type="submit" class="button">Continue</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>