<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <p class="lede">Enter your email address. We'll send you a link to reset your password. If you don't get a link, check that you have entered the correct email address.</p>
    </div>
</div>

<form method="post">
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
    <fieldset>
        <legend class="vh">Reset password</legend>
        <div class="form-group <%=  locals.validationMessages.email !== undefined ? "form-group-error" : "" %>">
            <label class="form-label-bold" for="email">Email address</label>
            <% if (locals.validationMessages.email !== undefined) { %>
            <p class="error-message" id="validation-email"><%= locals.validationMessages.email %></p>
            <% } %>
            <input class="form-control" id="email" name="email" type="email" value="<%=email%>" required  <% if (locals.validationMessages.email !== undefined) { %> aria-invalid="true" aria-describedby="validation-email" <% } %>>
        </div>
        <div class="form-submit">
            <button type="submit" class="button">Submit</button>
        </div>
    </fieldset>
</form>
