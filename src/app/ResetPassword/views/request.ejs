<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Reset your password
        </h1>
        <p class="lede">Enter your email address and we'll send you a link to reset your password.</p>
        <p>If you don't get a link, check that you have entered the correct email address.</p>
    </div>
</div>
<div class="grid-row">
    <div class="col-12">
        <form method="post" id="form-reset-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Reset password</legend>
                <div class="form-group <%=  locals.validationMessages.email !== undefined ? "form-group-error" : "" %>">
                    <label class="form-label" for="email">Email address</label>
                    <% if (locals.validationMessages.email !== undefined) { %>
                    <p class="error-message" id="validation-email"><%= locals.validationMessages.email %></p>
                    <% } %>
                    <input class="form-control" id="email" name="email" type="email" value="<%=email%>" required  aria-required="true" <% if (locals.validationMessages.email !== undefined) { %> aria-invalid="true" aria-describedby="validation-email" <% } %>>
                </div>
                <div class="form-submit">
                    <button type="submit" class="button">Submit</button>
                </div>
            </fieldset>
        </form>

    </div>
</div>
